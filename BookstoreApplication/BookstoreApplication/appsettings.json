{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/bookservice-log.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },

    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=bookstoreDB;Username=postgres;Password=root"
    }

}
